@model ChrisHaniHospital.Models.StaffVM
@{
    ViewData["Title"] = "Staff";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="m-2">
    <a asp-controller="UserManagement" asp-action="Create" class="btn btn-primary">Add New Staff</a>
</div>
<div class="bg-white card-box p0 border-20">
    <ul class="nav nav-tabs" id="reservationTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="current-tab" data-bs-toggle="tab" href="#current" role="tab" aria-controls="current" aria-selected="true">ANEASTHESIOLOGIST</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="NURSES-tab" data-bs-toggle="tab" href="#NURSES" role="tab" aria-controls="NURSES" aria-selected="true">NURSES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="SURGEONS-tab" data-bs-toggle="tab" href="#SURGEONS" role="tab" aria-controls="SURGEONS" aria-selected="true">SURGEONS</a>
        </li> 
        <li class="nav-item">
            <a class="nav-link" id="PHARMACISTS-tab" data-bs-toggle="tab" href="#PHARMACISTS" role="tab" aria-controls="PHARMACISTS" aria-selected="true">PHARMACISTS</a>
        </li>
    </ul>
    <div class="tab-content" id="reservationTabContent">
        <div class="tab-pane fade show active" id="current" role="tabpanel" aria-labelledby="current-tab">
            <div class="bg-white card-box p0 border-20  m-3">
                <div class="table-responsive pt-25 pb-25 pe-4 ps-4">
                    
                    <table id="Table" class="table property-list-table">
                        <thead>
                            <tr>
                                <th scope="col">NAME</th>

                                <th scope="col">SURNAME</th>
                                <th scope="col">CONTACT NUMBER</th>
                                <th scope="col">E-MAIL ADDRESS</th>
                                <th scope="col">HEALTH COUNCIL REGISTRATION NUMBER</th>
                            </tr>
                        </thead>
                        <tbody class="border-0">
                            @foreach ( Anaesthesiologist item in Model.Anaesthesiologist)
                            {
                                <tr>
                                    <td>@item.User.FirstName</td>
                                    <td>@item.User.LastName</td>
                                    <td>@item.User.PhoneNumber</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.Registration_Number</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table property-list-table -->
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="NURSES" role="tabpanel" aria-labelledby="NURSES-tab">
            <div class="bg-white card-box p0 border-20 m-3">
                
                <div class="table-responsive pt-25 pb-25 pe-4 ps-4">
                  
                    <table id="Table2" class="table property-list-table">
                        <thead>
