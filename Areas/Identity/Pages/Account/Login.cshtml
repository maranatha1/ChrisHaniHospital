@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    .SignINbtn{
                background-color: #3D6B7B;
        color: white;
    
    }
</style>

<section class="m-2">
<div class="align-content-center justify-content-center">
    <div class="d-flex align-content-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xxl-6">
                <div class="card">
                    <div class="card-body">
                        <form id="account" method="post">
                            <h4 class="text-center m-1">Sign In</h4>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating m-3">
                                <input asp-for="Input.Email" class="form-control #3D6B7B  form-control-sm" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating m-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                          @*   <p class="col text-end">
                                <a class="text-decoration-none text-primary" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p> *@
                            <div>
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="text-center">
                                <button id="login-submit" type="submit" class="w-75 btn btn-lg m-3 btn-primary ">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
